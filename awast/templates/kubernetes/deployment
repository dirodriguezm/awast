apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
  namespace: web-services
  labels:
    name: {{name}}
spec:
  selector:
    matchLabels:
      app: {{name}}
  template:
    metadata:
      labels:
        app: {{name}}
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: eks.amazonaws.com/nodegroup
                    operator: In
                    values:
                      - {{environment}}-web-services
    spec:
      containers:
        - name: {{name}}
          image: ghcr.io/alercebroker/{{name}}:{{version}}
          imagePullPolicy: Always
          ports:
            - containerPort: {{port}}
          {% if resources.requests %}
          resources:
            requests:
              memory: {{resources.requests.mem}}
              cpu: {{resources.requests.cpu}}
          {% endif %}
      restartPolicy: Always

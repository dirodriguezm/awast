apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
  namespace: web-services
  labels:
    name: {{name}}
spec:
  selector:
    matchLabels:
      app: {{name}}
  template:
    metadata:
      labels:
        app: {{name}}
    spec:
      containers:
        - name: {{name}}
          image: ghcr.io/alercebroker/{{name}}:{{version}}
          imagePullPolicy: Always
          ports:
            - containerPort: 8000
          resources:
            requests:
              memory: {{mem_request}}
              cpu: {{cpu_request}}
      restartPolicy: Always
